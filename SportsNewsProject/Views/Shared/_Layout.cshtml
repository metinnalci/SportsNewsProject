<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SportsNews</title>
    <!-- Goole Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Oswald:400,700|Roboto:400,500" rel="stylesheet">
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/mainsite/assets/js/jquery.min.js"></script>

    <!-- Owl carousel -->
    <script src="~/mainsite/assets/js/owl.carousel.js"></script>

    <!-- Bootstrap -->
    <script src="~/mainsite/assets/js/bootstrap.min.js"></script>

    <!-- Theme Script File-->
    <script src="~/mainsite/assets/js/script.js"></script>

    <!-- Off Canvas Menu -->
    <script src="~/mainsite/assets/js/offcanvas.min.js"></script>
    <!-- Bootstrap -->

    <link href="~/mainsite/assets/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/mainsite/assets/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <!-- Owl carousel -->
    <link href="~/mainsite/assets/css/owl.carousel.css" rel="stylesheet">
    <link href="~/mainsite/assets/css/owl.theme.default.min.css" rel="stylesheet">

    <!-- Off Canvas Menu -->
    <link href="~/mainsite/assets/css/offcanvas.min.css" rel="stylesheet">

    <!--Theme CSS -->
    <link href="~/mainsite/assets/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/errorpage/css/errormain.css">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="manifest" href="/favicon/site.webmanifest">
</head>
<body>
    <div id="main-wrapper">

        <!-- Header Section -->
        <header>
            <div class="container">
                <div class="top_ber">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_ber_left">
                                @DateTime.Now.ToString("dd MMMM dddd yyyy")
                            </div><!--top_ber_left-->
                        </div><!--col-md-6-->
                        <div class="col-md-6">
                            <div class="top_ber_right">
                                <div class="top-menu">
                                    @if (ViewBag.IsAuth == false)
                                    {
                                    <ul class="nav navbar-nav">
                                        <li><a href="/Admin/Login/">Admin Login</a></li>
                                        <li><a href="/login">Login</a></li>
                                        <li><a href="/register">Register</a></li>
                                    </ul>
                                    }
                                    else
                                    {
                                        <ul class="nav navbar-nav">
                                            <li><a href="javascript:void(0)">Welcome @ViewBag.name</a></li>
                                            <li><a href="/Login/LogOut/">Logout</a></li>
                                        </ul>
                                    }

                                </div><!--top-menu-->
                            </div><!--top_ber_left-->
                        </div><!--col-md-6-->
                    </div><!--row-->
                </div><!--top_ber-->

                <div class="header-section">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="logo">
                                <a href="/anasayfa"><img class="img-responsive" src="~/mainsite/assets/img/sportsnewslogo.png" alt="" style="width:160px; height:130px;"></a>
                            </div><!--logo-->
                        </div><!--col-md-3-->
                        
                    </div> <!--row-->
                </div><!--header-section-->
            </div><!-- /.container -->

            <nav class="navbar main-menu navbar-inverse navbar-static-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed pull-left" data-toggle="offcanvas">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div id="navbar" class="collapse navbar-collapse sidebar-offcanvas">
                        <ul class="nav navbar-nav">
                            <li class="hidden"><a href="#page-top"></a></li>
                            @if (ViewBag.categories != null)
                            {

                                @foreach (var item in ViewBag.categories)
                                {
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@item.CategoryName <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            @if (item.News.Count != 0)
                                            {
                                                <li><a href="/kategori/@item.ID/@UrlHelpers.FriendlyUrl(item.CategoryName)">@item.CategoryName</a></li>
                                            }

                                            @foreach (var sub in ViewBag.subcategories)
                                            {
                                                if (sub.UpperCategoryID == item.ID)
                                                {
                                                    <li><a href="/altkategori/@sub.ID/@UrlHelpers.FriendlyUrl(sub.CategoryName)">@sub.CategoryName</a></li>

                                                }
                                            }
                                        </ul>
                                    </li>
                                }


                            }

                        </ul>
                        @*<div class="pull-right">
                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input class="form-control" placeholder="Search" name="q" type="text">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>*@
                    </div>
                </div>
            </nav>
            <!-- .navbar -->
        </header>

        @RenderBody()

        <!-- Footer Section -->
        <footer class="footer_section section_wrapper section_wrapper">
            <div class="footer_top_section">
                <div class="container">
                    <div class="row" style="display:flex; justify-content:space-evenly;">
                        <div class="col-md-3">
                            <div class="text_widget footer_widget">
                                <div class="footer_widget_title"><h2>Sports News Hakkında</h2></div>

                                <div class="footer_widget_content">
                                    Sports News bir spor haberleri sitesidir. BABoost sınıfından Metin Nalcı ve Doğan Aker tarafından hazırlanmış olup, hiçbir ticari amaç güdülmemektedir.
                                </div>
                            </div><!--text_widget-->
                        </div><!--col-xs-3-->

                        <div class="col-md-2">
                            <div class="footer_widget">
                                <div class="footer_widget_title"><h2>Keşfet</h2></div>
                                <div class="footer_menu_item ">
                                    <div class="row">
                                        <div class="col-sm-8">
                                            <ul class="nav navbar-nav ">
                                                @foreach (var item in ViewBag.categories)
                                                {
                                                    if(item.News.Count != 0)
                                                    {
                                                        <li><a href="/kategori/@item.ID/@UrlHelpers.FriendlyUrl(item.CategoryName)">@item.CategoryName</a></li>
                                                    }
                                                    
                                                }
                                            </ul>
                                        </div><!--col-sm-4-->
                                    </div><!--row-->
                                </div><!--footer_menu_item-->
                            </div><!--footer_widget-->
                        </div><!--col-xs-6-->

                        <div class="col-md-2">
                            <div class="text_widget footer_widget">
                                <div class="footer_widget_title"><h2>Feedback</h2></div>
                                <div class="footer_menu_item">
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <ul class="nav navbar-nav ">
                                                <li><a href="./">Bize Ulaşın</a></li>
                                                <li><a href="../navbar/">Teknik Sorun Bildir</a></li>
                                                <li><a href="../navbar-static-top/">Şikayet & Geliştirmeler</a></li>
                                            </ul>
                                        </div><!--col-sm-4-->

                                    </div>
                                </div>
                                
                            </div>
                        </div><!--col-xs-3-->
                    </div><!--row-->
                </div><!--container-->
            </div><!--footer_top_section-->
            <a href="#" class="crunchify-top"><i class="fa fa-angle-up" aria-hidden="true"></i></a>

            <div class="copyright-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-3">
                            Editor: Joshep guinter Grunt
                        </div><!--col-xs-3-->
                        <div class="col-md-6">
                            <div class="copyright">
                                © Copyright 2015 - Sports News Mag.com. Design by: <a href="https://uiCookies.com" title="uiCookies">uiCookies</a>
                            </div>
                        </div><!--col-xs-6-->
                        <div class="col-md-3">
                            Sports News Magazine
                        </div><!--col-xs-3-->
                    </div><!--row-->
                </div><!--container-->
            </div><!--copyright-section-->
        </footer>
    </div> <!--main-wrapper-->

</body>

</html>